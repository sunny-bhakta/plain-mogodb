    value: NumberDecimal("1024.89"),
  },
  {
    customer_id: "elise_smith@myemail.com",
    orderdate: ISODate("2020-10-03T13:49:44Z"),
    value: NumberDecimal("102.24"),
  },
]);

const pipeline = [
  // 1. Only orders from 2020
  {
    $match: {
      orderdate: {
        $gte: ISODate("2020-01-01T00:00:00Z"),
        $lt: ISODate("2021-01-01T00:00:00Z"),
      },
    },
  },
  // 2. Sort by order date ascending
  {
    $sort: { orderdate: 1 },
  },
  // 3. Group by customer
  {
    $group: {
      _id: "$customer_id",
      first_purchase_date: { $first: "$orderdate" },
      totalValue: { $sum: "$value" },
      totalOrders: { $sum: 1 },
      orders: {
        $push: {
          orderdate: "$orderdate",
          value: "$value",
        },
      },
    },
  },
  // 4. Sort customers by first purchase date
  {
    $sort: { first_purchase_date: 1 },
  },
  // 5. Rename _id to customer_id
  {
    $set: { customer_id: "$_id" },
  },
  // 6. Remove _id field
  {
    $unset: ["_id"],
  },
];

db.orders.aggregate(pipeline).pretty();
